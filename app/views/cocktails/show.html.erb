<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> of <%= dose.ingredient.name %> --
  <button type="button" class="btn btn-danger btn-sm">
    <%= link_to "Delete", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </button>
</p>
<% end %>


<br>
<br>

<h3>Reviews</h3>

<% @cocktail.reviews.each do |review| %>
  <p><%= review.content %></p>
<% end %>

<br>
<%= simple_form_for [@cocktail, @review] do |f| %>
  <%= f.input :content %>
  <%= f.submit "add a review", class: "btn btn-primary pull-right" %>
<% end %>

<br>
<%= link_to "New dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>

<br>
<br>
<%= link_to "Back to cocktails", cocktails_path, class: "btn btn-primary" %>

