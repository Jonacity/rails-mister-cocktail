<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> of <%= dose.ingredient.name %> --
  <button type="button" class="btn btn-outline-danger btn-sm">
    <%= link_to "Delete", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </button>
</p>
<% end %>

<%= link_to "New dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back", cocktails_path %>

