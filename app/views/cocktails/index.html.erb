<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1>Destination cocktail</h1>
    <p>Drink Drink Drink</p>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>

<div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-3">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path('card.jpg') %>');">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
          <p>Very cool cocktail</p>
        </div>
        <i class="fas fa-glass-martini card-user"></i>
        <a class="card-link" href="<%= cocktail_path(cocktail) %>" ></a>
      </div>
    </div>
  <% end %>
</div>

